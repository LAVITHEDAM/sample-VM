<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.DetailsFragment">

    <TextView
            android:id="@+id/dev_name_text_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lavith"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/dev_tech_text_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Android"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dev_name_text_View"/>

    <TextView
            android:id="@+id/dev_exp_text_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dev_tech_text_View"/>

</android.support.constraint.ConstraintLayout>